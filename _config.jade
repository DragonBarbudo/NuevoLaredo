mixin moduloEvento
  .moduloNota.container.fluid
    .c12.img(ng-style="{ 'background-image':'url('+item.gsx$img.$t+')' }")
    .c12.g: .title {{item.gsx$titulo.$t}}
    .c12.g: .date
      i.fa.fa-calendar-o
      |  {{item.gsx$mes.$t}} {{item.gsx$dia.$t}}
    .c12.g: p.description(ng-bind-html="item.gsx$contenido.$t")

mixin moduloNota
  a(ui-sref="nota({id:item.id.$t})").moduloNota.container.fluid
    .c12.img(ng-style="{ 'background-image':'url('+item.gsx$img.$t+')' }")
    .c12.g: .title {{item.gsx$titulo.$t}}
    .c12.g: .date
      i.fa.fa-calendar-o
      |  {{ item.gsx$fecha.$t }}
    .c12.g: p.description 
      | {{item.gsx$contenido.$t | htmlToPlaintext | limitTo:90}}
      | ...
      
mixin moduloGabinete
  .moduloGabinete.container.fluid
    a.c12.img(ui-sref="gabinete-detalle({id:item.id.$t})" ng-style="{ 'background-image':'url('+item.gsx$img.$t+')' }")
      .hover.container.middle.center
        .c
          .name {{item.gsx$nombre.$t}}
          .job-title {{item.gsx$titulo.$t}}
    a(ui-sref="nota").c10.cm12.g
      .title {{item.gsx$nombre.$t}}
      p.description 
        | {{item.gsx$contenido.$t | htmlToPlaintext | limitTo:90}}
        | ...
    .c2.cm12.g.social.tac
      a(ng-href="{{item.gsx$twitter.$t}}" ng-if="item.gsx$twitter.$t"): i.fa.fa-twitter
      a(ng-href="{{item.gsx$facebook.$t}}" ng-if="item.gsx$facebook.$t"): i.fa.fa-facebook
      a(ng-href="{{item.gsx$linkedin.$t}}" ng-if="item.gsx$linkedin.$t"): i.fa.fa-linkedin
      a(ng-href="{{item.gsx$instagram.$t}}" ng-if="item.gsx$instagram.$t"): i.fa.fa-instagram

mixin moduloDirectorio
  .moduloDirectorio.container.fluid
    .c
      .what {{item.nombre}}
      .mail: a(ng-href="mailto:{{item.gsx$correo.$t}}")
        i.fa.fa-envelope-o
        |  {{item.gsx$correo.$t}}
      .phone
        i.fa.fa-phone
        |  {{item.gsx$telefono.$t}}
      .addr
        i.fa.fa-map-marker
        |  <strong>{{item.gsx$direccion1.$t}}</strong>
        br
        | {{item.gsx$direccion2.$t}}

mixin accesos
  .accesos-directos
    .telefonos
      input(type="checkbox").nom.nod.not#check-telefonos
      label.fa.fa-phone(for="check-telefonos")
      ul
        li: a(href="tel:066")
          .sub Emergencias y Protección Civil
          .tit Tel: 066
        li: a(href="tel:070")
          .sub Centro Integral de Atención Ciudadana
          .tit Tel: 070
    .webs
      input(type="checkbox").nom.nod.not#check-webs
      label.fa.fa-share-square-o(for="check-webs")
      ul
        li: a(ui-sref="gabinete")
          .sub Gabinete
          .tit Funcionarios municipales
        li: a(ui-sref="directorio")
          .sub Directorio
          .tit Dependencias municipales
        li: a(href="http://nuevolaredo.gob.mx/ciac-admin/" target="_blank")
          .sub CIAC
          .tit Centro Integral de Atención Ciudadana
        li: a(href="http://difnuevolaredo.gob.mx/" target="blank")
          .sub DIF
          .tit Nuevo Laredo
