mixin header
  header
    .container: .c.tac.logo: a(ui-sref="inicio"): img(src="app/img/nuevolaredo.png", alt="Gobierno de Nuevo Laredo")
    .masmodernidad: img(src="app/img/masmodernidad.png", alt="Más modernidad")
    +menu
    .menuBtn: i.fa.fa-bars
    
mixin subheader(title, subtitle)
  .subheader
    h1 #{title}
    if(subtitle)
      h2 #{subtitle}
    
mixin metainfo
  .metainfo
    .container
      .c
        i.fa.fa-calendar-o
        |  {{#{item_fecha}}}
      .c
        i.fa.fa-folder-o
        |  {{#{item_tipo}}}
      
      .c
        +socialshare

mixin socialshare
  .container.tac
    .c: .fb-share-button
    .c: a.twitter-share-button(href="https://twitter.com/intent/tweet")

mixin footer
  +accesos
  footer
    .container
      .c4.ct12.cm12.g
        script(type="text/ng-template" id="noticiaTmp")
          +moduloEvento
                      
        h2 Próximos eventos
        ul.proximos-eventos.container
            li.c12.ct6.cm12(ng-repeat="item in eventos" ng-click="eventoOpen(#{item_id})")
              .container.middle
                .c3.g: .img(ng-style="{ 'background-image':'url('+#{item_img}+')' }").fluid
                .c8.g
                  p {{#{item_titulo}}} 
                  .date
                    i.fa.fa-calendar-o
                    |  {{#{item_mes}}} {{#{item_dia}}}
        
              
              
