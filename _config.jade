      .c4.ct12.cm12.g
        h2 Próximos eventos
        ul.proximos-eventos.container
          div(ng-repeat="item in eventos")
            li.c12.ct6.cm12
              a(ng-href="{{item.gsx$img.$t}}" ng-attr-title="<h2>{{item.gsx$titulo.$t}}</h2>{{item.gsx$contenido.$t}}").container.ng-box
                .c3.g: .img(ng-style="{ 'background-image':'url('+item.gsx$img.$t+')' }")
                .c8.g
                  p {{item.gsx$titulo.$t}}
              
