mixin topbar
  .topbar
    .container
      .c6.ct12.cm12
        .container.tac
          .c.cm12.telefono
            i.fa.fa-phone
            span  01-800-987-654
          a.c.cm12(href="mailto:admin@nuevolaredo.gob.mx")
            i.fa.fa-envelope
            span  admin@nuevolaredo.gob.mx
          a.c.cm12(href="#")
            i.fa.fa-user
            span  Iniciar sesión
      .c6.ct12.cm12.redes.tar
        .container
          .c
            a(href="http://twitter.com"): i.fa.fa-twitter
            a(href="http://facebook.com"): i.fa.fa-facebook
            a(href="http://youtube.com"): i.fa.fa-youtube
            a(href="http://instagram.com"): i.fa.fa-instagram
          //.c.search
            label.fa.fa-search
            input(type="search")

mixin header
  header
    .container: .c.tac.logo: a(href="index.html"): img(src="app/img/nuevolaredo.png", alt="Gobierno de Nuevo Laredo")
    .masmodernidad: img(src="app/img/masmodernidad.png", alt="Más modernidad")
    +menu
    .menuBtn: i.fa.fa-bars
    
mixin subheader(title)
  .subheader
    h1 #{title}
    
mixin metainfo
  .metainfo
    .container
      .c
        i.fa.fa-calendar-o
        |  Noviembre 25, 2005
      .c
        i.fa.fa-folder-o
        |  Noticia
      .c
        i.fa.fa-user
        |  Autor
      .c
        +socialshare

mixin socialshare
  .container.tac
    .c: .fb-share-button
    .c: a.twitter-share-button(href="https://twitter.com/intent/tweet")

mixin footer
  +accesos
  footer
