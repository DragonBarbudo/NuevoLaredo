          | <div class="fb-page" data-href="https://www.facebook.com/gobiernodenuevolaredo/" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="false"></div>
    section.otros
      .container.tac
        .c: a(href="http://difnuevolaredo.gob.mx/", target="_blank"): img(src="app/img/lg_dif.png", alt="DIF")
        .c: a(href="http://nuevolaredo.gob.mx/ciac-admin/", target="_blank"): img(src="app/img/lg_ciac.png", alt="CIAC")
        .c: a(href="http://www.tamaulipas.gob.mx/", target="_blank"): img(src="app/img/lg_tam.png", alt="Tamaulipas")
        .c: a(href="http://www.gob.mx/presidencia", target="_blank"): img(src="app/img/lg_mx.png", alt="Presidencia de la República")
    .end
      .container.middle
        .c6.cm12.g.tac
          .footer-logo: a(ui-sref="inicio"): img(src="app/img/nuevolaredo.png", alt="Gobierno de Nuevo Laredo")
          p Todos lo Derechos Reservados. 2016
        .c6.cm12.g.tar
          .container.tal
            .c6.g.first: +menu
            .c6.g.second: +menu


mixin moduloEvento
  .moduloNota.container.fluid
    .c12.img(ng-style="{ 'background-image':'url('+#{item_img}+')' }")
    .c12.g: .title {{#{item_titulo}}}
    .c12.g: .date
      i.fa.fa-calendar-o
      |  {{#{item_mes}}} {{#{item_dia}}}
    .c12.g: p.description(ng-bind-html="#{item_contenido}")

mixin moduloNota
  a(ui-sref="nota({id:#{item_id}})").moduloNota.container.fluid
    .c12.img(ng-style="{ 'background-image':'url('+#{item_img}+')' }")
    .c12.g: .title {{#{item_titulo}}}
    .c12.g: .date
      i.fa.fa-calendar-o
      |  {{ #{item_fecha} }}
    .c12.g: p.description 
      | {{#{item_contenido} | htmlToPlaintext | limitTo:90}}
      | ...
      
mixin moduloGabinete
  .moduloGabinete.container.fluid
    a.c12.img(ui-sref="gabinete-detalle({id:#{item_id}})" ng-style="{ 'background-image':'url('+#{item_img}+')' }")
      .hover.container.middle.center
        .c
          .name {{#{item_nombre}}}
          .job-title {{#{item_titulo}}}
    a(ui-sref="nota").c10.cm12.g
      .title {{#{item_nombre}}}
      p.description 
        | {{#{item_contenido} | htmlToPlaintext | limitTo:90}}
        | ...
    .c2.cm12.g.social.tac
      a(ng-href="{{#{item_twitter}}}" ng-if="#{item_twitter}"): i.fa.fa-twitter
      a(ng-href="{{#{item_facebook}}}" ng-if="#{item_facebook}"): i.fa.fa-facebook
      a(ng-href="{{#{item_linkedin}}}" ng-if="#{item_linkedin}"): i.fa.fa-linkedin
      a(ng-href="{{#{item_instagram}}}" ng-if="#{item_instagram}"): i.fa.fa-instagram

mixin moduloDirectorio
  .moduloDirectorio.container.fluid
    .c
      .what
        | {{#{item_nombre}}}
        br
        small {{item.gsx$area.$t}}
      .mail: a(ng-href="mailto:{{#{item_correo}}}")
        i.fa.fa-envelope-o
        |  {{#{item_correo}}}
      .phone
        i.fa.fa-phone
        |  {{#{item_telefono}}}
      .addr
        i.fa.fa-map-marker
        |  <strong>{{#{item_direccion1}}}</strong>
        br
        | {{#{item_direccion2}}}

mixin accesos
  .accesos-directos
    .telefonos
      input(type="checkbox").nom.nod.not#check-telefonos
      label.fa.fa-phone(for="check-telefonos")
      ul
        li: a(href="tel:066")
          .sub Emergencias y Protección Civil
          .tit Tel: 066
        li: a(href="tel:070")
          .sub Centro Integral de Atención Ciudadana
          .tit Tel: 070
    .webs
      input(type="checkbox").nom.nod.not#check-webs
      label.fa.fa-share-square-o(for="check-webs")
      ul
        li: a(ui-sref="gabinete")
          .sub Gabinete
          .tit Funcionarios municipales
        li: a(ui-sref="directorio")
          .sub Directorio
          .tit Dependencias municipales
        li: a(href="http://nuevolaredo.gob.mx/ciac-admin/" target="_blank")
          .sub CIAC
          .tit Centro Integral de Atención Ciudadana
        li: a(href="http://difnuevolaredo.gob.mx/" target="blank")
          .sub DIF
          .tit Nuevo Laredo
