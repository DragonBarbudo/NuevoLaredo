include _config.jade

+html5
  +head('Gobierno de Nuevo Laredo', 'Palabras clave', 'Descripción')
  
  body(ng-app="dw4")
    #fb-root
    
    +topbar
    +header
    
    
    section.sliders
      slick(arrows="false" as-nav-for="#menuslider" responsive="[{breakpoint:720,settings:{arows:true}}]")#mainslider
        - for(var i = 0; i<4; i++ )
          div(style="background-image:url(http://placehold.it/1200x480)")
            .container.fluid.middle
              .c10.o1.slider-date Noviembre 25, 2005
              .c6.o1.cm10.slider-title El presidente municipal se reunió con miembros del Club Rotario
              .c6.o1.cm10: a.slider-link(href="#").button.button-border Leer más
      slick(arrows="false" as-nav-for="#mainslider" focus-on-select="true" vertical-swiping="true" vertical="true" slides-to-show="3")#menuslider.nom
        - for(var i = 0; i<4; i++ )
          div
            .container.fluid.middle
              .c10.slider-type Noticia
              .c10.slider-title El presidente municipal se reunió con miembros del Club Rotario
  
    section.unete
      .container
        .c12.tac
          h2 Únete a nuestra comunidad
          p Suscríbete al boletín oficial y continua recibiendo información de valor.
        .c12.field
          form.container
            .c10.cm12: input(type="email" placeholder="Escribe tu correo electrónico")
            .c2.cm12: button(type="submit").button.button-rounded Suscribirme
  
    section.ultimas-noticias
      .container
        .c12.tac
          h2 Últimas Noticias
          p Te presentamos los sucesos más recientes y relevantes de nuestra comunidad.
      .container
        .c12
          slick(slides-to-show="3" autoplay="true" responsive="[{breakpoint:720,settings:{slidesToShow:1}}]")#noticiasslider
            - for(var i = 0; i<4; i++ )
              div
                +moduloNota
    .accesos-directos
      .telefonos
        input(type="checkbox").nom.nod.not#check-telefonos
        label.fa.fa-phone(for="check-telefonos")
        ul
          li: a(href="tel:066")
            .sub Emergencias
            .tit Tel: 066
          li: a(href="tel:9557020")
            .sub Protección civil
            .tit Tel: 955-7020
          li: a(href="tel:072")
            .sub Quejas y denuncias
            .tit Tel: 072
      .webs
        input(type="checkbox").nom.nod.not#check-webs
        label.fa.fa-share-square-o(for="check-webs")
        ul
          li: a(href="http://www.reynosa.gob.mx/gobierno/" target="_blank")
            .sub Gobierno
            .tit Funcionarios municipales
          li: a(href="directorio.html" target="_blank")
            .sub Directorio
            .tit Dependencias municipales
          li: a(href="http://nuevolaredo.gob.mx/ciac-admin/" target="_blank")
            .sub CIAC
            .tit Centro Integral de Atención Ciudadana
          li: a(href="http://difnuevolaredo.gob.mx/" target="blank")
            .sub DIF
            .tit Nuevo Laredo
    +footer
        
    +scripts
    
